<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="270dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:src="@drawable/holder"/>

    <Button
        android:id="@+id/Ambil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambil Gambar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="210dp"
        android:layout_marginLeft="190dp"/>

    <Button
        android:id="@+id/ambilGaleri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambil Galeri"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="210dp"
        android:layout_marginLeft="27dp"/>

    <ImageButton
        android:id="@+id/kirimServer"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="624dp"
        android:scaleType="fitCenter"
        android:src="@drawable/kirim"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/simpanLokal"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="624dp"
        android:scaleType="fitCenter"
        android:src="@drawable/lokal"
        tools:ignore="SpeakableTextPresentCheck"/>

    <TextView
        android:id="@+id/hasilDetect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ambil"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-198dp"
        android:text="Hasil Deteksi :"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/rhasilDetect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ambil"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="-198dp"
        android:text="Hasil Deteksi Disini"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp" />

</RelativeLayout>