<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="254dp"
        android:layout_height="348dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="264dp"/>

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="254dp"
        android:layout_height="348dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="264dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/ambilKamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="108dp"
        android:text="Ambil Gambar"/>

    <Button
        android:id="@+id/ambilGaleri"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="108dp"
        android:text="Ambil Galeri"/>

    <ImageButton
        android:id="@+id/kirimServer"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@id/simpanLokal"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/kirim"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <ImageButton
        android:id="@+id/simpanLokal"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/lokal"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <ImageButton
        android:id="@+id/reload"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@id/kirimServer"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/reload"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <TextView
        android:id="@+id/hasilDetect"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="565dp"
        android:layout_marginEnd="155dp"
        android:text="Hasil Deteksi :"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/rhasilDetect"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="565dp"
        android:layout_marginEnd="17dp"
        android:text="Hasil Deteksi"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/spinnerNamaPasar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerNamaSayur"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="27dp"
        android:minHeight="30dp"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <Spinner
        android:id="@+id/spinnerNamaSayur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reload"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="27dp"
        android:minHeight="30dp"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <View
        android:id="@+id/penutup"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rhasilDetect"
        android:layout_marginTop="113dp"
        android:background="@color/black"/>

    <View
        android:id="@+id/penengah"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_below="@id/penutup"
        android:background="@color/black"
        android:layout_marginStart="180dp"/>

    <ImageButton
        android:id="@+id/ambilData"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/penutup"
        android:layout_alignParentStart="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/scan"
        android:background="@null"
        android:scaleType="fitCenter"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <ImageButton
        android:id="@+id/analisisData"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/penutup"
        android:layout_alignParentStart="true"
        android:layout_marginStart="260dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/analisis"
        android:background="@null"
        android:scaleType="fitCenter"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

</RelativeLayout>