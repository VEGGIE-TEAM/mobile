<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="250dp"
        android:layout_height="320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ambilGaleri"
        android:layout_marginStart="50dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="250dp"
        android:layout_height="320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ambilGaleri"
        android:layout_marginStart="50dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/ambilKamera"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ambilGaleri"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="108dp"
        android:text="Ambil Gambar"/>

    <Button
        android:id="@+id/ambilGaleri"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ambilKamera"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="37dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="108dp"
        android:text="Ambil Galeri"/>

    <ImageButton
        android:id="@+id/kirimServer"
        android:layout_width="29dp"
        android:layout_height="29dp"
        app:layout_constraintStart_toEndOf="@id/simpanLokal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/kirim"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <ImageButton
        android:id="@+id/simpanLokal"
        android:layout_width="29dp"
        android:layout_height="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="29dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/lokal"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <ImageButton
        android:id="@+id/reload"
        android:layout_width="29dp"
        android:layout_height="29dp"
        app:layout_constraintStart_toEndOf="@id/kirimServer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/reload"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <ImageButton
        android:id="@+id/cropGambar"
        android:layout_width="29dp"
        android:layout_height="29dp"
        app:layout_constraintEnd_toStartOf="@id/machineLearning"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/crop"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <ImageButton
        android:id="@+id/machineLearning"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="29dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/hasilDetect"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ambilGaleri"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="29dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="155dp"
        android:text="Hasil Deteksi :"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/rhasilDetect"
        android:layout_width="234dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ambilGaleri"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="137dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:text="Hasil Deteksi"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/spinnerNamaPasar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerNamaSayur"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="27dp"
        android:minHeight="30dp"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <Spinner
        android:id="@+id/spinnerNamaSayur"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reload"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="27dp"
        android:minHeight="30dp"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <View
        android:id="@+id/penutup"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="707dp"
        android:background="@color/black"/>

    <View
        android:id="@+id/penengah"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/penutup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/penutup"
        android:background="@color/black"
        android:layout_marginStart="180dp"/>

    <ImageButton
        android:id="@+id/ambilData"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/penutup"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="73dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/scan"
        android:background="@null"
        android:scaleType="fitCenter"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

    <ImageButton
        android:id="@+id/analisisData"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/penutup"
        app:layout_constraintStart_toEndOf="@id/penengah"
        android:layout_marginStart="73dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/analisis"
        android:background="@null"
        android:scaleType="fitCenter"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>

</androidx.constraintlayout.widget.ConstraintLayout>
